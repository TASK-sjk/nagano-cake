<div class="container">
	<div class="row">
		<div class="title">
			<h3 style="background-color: #DDDDDD;width: 300px;text-align: center;margin-top: 50px;margin-left: 60px">ジャンル編集画面</h3>
		</div>

		<%= form_for @category, url:admins_category_path do |f| %>
		<tr>
			<td>
				<h5><strong>ジャンル</strong></h5>
			</td>
			<td>
				<%= f.text_field :name %>
			</td>
			<td>
				<%= f.radio_button :status, "有効" %>
				<%= f.label :有効 %>
			</td>
			<td>
				<%= f.radio_button :status, "無効" %>
				<%= f.label :無効 %>
			</td>
			<td>
				<%= f.submit "編集を保存する", class:"btn btn-primary", style:"padding-left:40px; padding-right:40px; margin-left: 150px;" %>
			</td>
		</tr>
		<% end %>
	</div>
</div>
