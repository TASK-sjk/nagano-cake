<div class="container">
	<div class="row">
		<div class="col-xs-2">
		</div>

		<!-- col-xs-9をcol-xs-6に変更 -->
		<div class="col-xs-6">
		<div class="title">
			<h3 style="margin-bottom: 30px;"><strong>ジャンル追加・一覧画面</strong></h3>
		</div>
		<%= form_for @category, url:admins_categories_path do |f| %>
		<tr>
			<td>
				<!-- h5の削除により、テーブル上の同じ配列にジャンルという文字が表示される -->
				<strong>ジャンル</strong>
			</td>
			<td>
				<%= f.text_field :name %>
			</td>
			<td>
				<!-- 空白を少し作成 -->
				<span style="padding-right: 10px;"></span>
				<%= f.radio_button :status, "有効" %>
				<%= f.label :有効 %>
			</td>
			<td>
				<%= f.radio_button :status, "無効" %>
				<%= f.label :無効 %>
			</td>
			<td>
				<!-- ボタンの色と大きさの変更 -->
				<%= f.submit '追加', class:"btn", style:"background-color: #3399FF; color: white; margin-left: 80px; padding: 10px 15px; border-radius: 10px" %>
			</td>
		</tr>
		<% end %>

		<!-- ジャンル追加formとテーブルの間の隙間の感覚を拡張 -->
		<table class="table table-hover table-inverse" style="margin-top: 40px;">
			<thead>
				<tr>
					<th style="background-color: #DCDCDC; border-top: 1px solid silver; border-bottom: 1px solid silver; height: 40px">ジャンル</th>
					<th style="background-color: #DCDCDC; border-top: 1px solid silver; border-bottom: 1px solid silver; height: 40px">状態</th>
					<th colspan="3" style="background-color: #DCDCDC; border-top: 1px solid silver; border-bottom: 1px solid silver; height: 40px"></th>
				</tr>
			</thead>
			<tbody>
				<% @categories.each do |category| %>
				<tr>
					<td style="border-top: 1px solid silver; border-bottom: 1px solid silver;">
						<%= category.name %>
					</td>
					<td style="border-top: 1px solid silver; border-bottom: 1px solid silver;">
						<%= category.status %>
					</td>
					<!-- ボタンの色の変更 -->
					<td style="border-top: 1px solid silver; border-bottom: 1px solid silver;">
						<%= link_to '編集する', edit_admins_category_path(category), class: "btn btn-primary", style:"background-color: blue;" %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
</div>
</div>
</div>