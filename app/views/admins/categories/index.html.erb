<div class="conteiner">
	<div class="row">
		<div class="col-xs-2">
		</div>
		<div class="col-xs-9">
		<div class="title">
			<h3 style="background-color: #DDDDDD;width: 300px;text-align: center;margin-top: 50px;margin-left: 60px">ジャンル追加・一覧画面</h3>
		</div>
		<%= form_for @category, url:admins_categories_path do |f| %>
		<tr>
			<td>
				<h5><strong>ジャンル</strong></h5>
			</td>
			<td>
				<%= f.text_field :name %>
			</td>
			<td>
				<%= f.radio_button :status, "有効" %>
				<%= f.label :有効 %>
			</td>
			<td>
				<%= f.radio_button :status, "無効" %>
				<%= f.label :無効 %>
			</td>
			<td>
				<%= f.submit '追加', class:"btn btn-primary", style:"padding-left:40px; padding-right:40px; margin-left: 100px;" %>
			</td>
		</tr>
		<% end %>

		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>ジャンル</th>
					<th>状態</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @categories.each do |category| %>
				<tr>
					<td>
						<%= category.name %>
					</td>
					<td>
						<%= category.status %>
					</td>
					<td>
						<%= link_to '編集する', edit_admins_category_path(category), class: "btn-sm btn-primary" %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
</div>
</div>
</div>