<!-- # <%= render%> -->

<h3 style="background-color: #DDDDDD;width: 250px;text-align: center;margin-top:50px;margin-left:70px">注文一覧画面</h3>
<table class="table table-striped">
	<thead>
		<tr>
			<td>購入日時</td>
			<td>購入者</td>
			<td>注文個数</td>
			<td>注文ステータス</td>
		</tr>
	</thead>
	<tbody>
		<tr>
			<% @order each do |order| %>
			<td><%= order.created_at %></td>
			<td><%= order.customer_name %></td>
			<td><%= order.items.count %></td>
			<td><%=  f.select :status, options_for_select(Order.status.keys)%></td>
		</tr>

	</tbody>
</table>
<%= paginate @order, class: "paginate" %>