<h2>商品詳細画面</h2>

<div class="container">
	<div class="row">
		<div class="col-xs-4"></div>
		<div class="col-xs-6">
			<table class="table">
				<tr>
					<th>商品名</th>
					<td><%= @item.name %></td>
				</tr>
				<tr>
					<th>商品説明</th>
					<td><%= @item.body %></td>
				</tr>
				<tr>
					<th>ジャンル</th>
					<td><%= @item.category %></td>
				</tr>
				<tr>
					<th>税抜き価格</th>
					<td><%= @item.price %></td>
				</tr>
				<tr>
					<th>販売ステータス</th>
					<td>内容（コンテンツ）</td>
				</tr>
			</table>
		</div>
		<div class="col-xs-2">
			<%= link_to '編集する', edit_admins_item_path(item) %>
		</div>
	</div>
</div>