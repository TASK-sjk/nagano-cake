<h3 style="background-color: #DDDDDD;width: 250px;text-align: center;margin-top:50px;margin-left:90px">商品　新規登録画面</h3>

<div class="container">
	<div class="row">
		<%= form_for @item, url:admins_items_path do |f| %>

		<% if @item.errors.any? %>
		<div class="alert alert-warning">
			<h2><%= @item.errors.count %>件のerrorがあります。</h2>
			<ul>
				<% @item.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
		<% end %>
		<div class="col-xs-4">
			<div class="field">
				<%= image_tag 'icon-no-image.svg', size: '300x200' %>
				<br>
				<br>
				<%= f.attachment_field :image ,style:"margin-left:40px;" %>
			</div>

		</div>

		<div class="col-xs-6">

			<table class="table">
				<tr>
					<th><%= f.label :商品名 %></th>
					<td><%= f.text_field :name %></td>
				</tr>
				<tr>
					<th><%= f.label :商品説明 %></th>
					<td><%= f.text_area :body %></td>
				</tr>
				<tr>
					<th><%= f.label :ジャンル %></th>
					<td><%= f.select :category_id, Category.where(status: "有効").map { |category| [category.name, category.id] } %>

				</td>
			</tr>
			<tr>
				<th><%= f.label :税抜き価格 %></th>
				<td><%= f.text_field :price %></td>
			</tr>
			<tr>
				<th><%= f.label :販売ステータス %></th>
				<td><%= f.select :status, Item.statuses.keys.to_a, {} %></td>
			</tr>
		</table>
	</div>

	<div class="col-xs-2">
		<%= f.submit "新規登録" ,class:"btn btn-primary btn-sm", style:"color: white; padding: 9px; padding-left: 20px; padding-right: 20px; margin-top: 200px;" %>
	</div>
	<% end %>
</div>
</div>