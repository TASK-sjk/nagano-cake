<%= render 'admins/list' %>

<h3 style="background-color: #DDDDDD;width: 250px;text-align: center;margin-top:30px;margin-bottom:20px;margin-left:90px">商品一覧画面</h3>



<div class="container">
	<div class="row">
		<div class="col-xs-10">
			<table class="table">
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜き価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
				</tr>
				<% @items.each do |item| %>
				<tr>
					<th><%= item.id %></th>
					<th><%= link_to item.name, admins_item_path(item) %>
					</th>
					<th><%= item.price %></th>
					<th><%= item.category.name %></th>
					<th><%= item.status %></th>
				</tr>
				<% end %>
			</table>
			<%= link_to '商品新規登録', new_admins_item_path, class:"btn btn-primary btn-sm", style:"color: white; padding: 9px; padding-left: 20px; padding-right: 20px; margin-top: 20px; margin-left:750px;" %>
		</div>

	</div>
</div>

