<div class="conteiner">
	<div class="row">
		<div class="col-xs-2">
		</div>
		<div class="col-xs-9">
			<div class="title">
				<h3 style="background-color: #DDDDDD;width: 160px;text-align: center;margin-top: 50px;margin-left: 30px">会員一覧画面</h3>
			</div>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th>会員ID</th>
						<th>氏名</th>
						<th>メールアドレス</th>
						<th>ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @customer.each do |customer| %>
					<tr>
						<td>
							<%= customer.id %>
						</td>
						<td>
							<%= link_to admins_customer_path(customer) do %>
							<%= customer.last_name %>
							<%= customer.first_name %>
							<% end %>
						</td>
						<td>
							<%= customer.email %>
						</td>
						<td>
							<%= customer.is_deleted %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
