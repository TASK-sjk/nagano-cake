<div class="container">
	<div class="row">
		<div class="title">
			<h3 style="background-color: #DDDDDD;width: 160px;text-align: center;margin-top: 50px;margin-left: 30px">会員詳細画面</h3>
		</div>
		<table class="table-borderless" style="margin-top:50px; margin-bottom:15px;border-collapse: separate;">
			<tbody>
				<tr>
					<td>
						<h5><strong>顧客ID</strong></h5>
					</td>
					<td>
						<%= @customer.id %>
					</td>
					<td>
						<%= @customer.is_deleted %>
					</td>
				</tr>
				<tr>
					<td>
						<h5><strong>氏名</strong></h5>
					</td>
					<td>
						<%= @customer.last_name %>
						<%= @customer.first_name %>
					</td>
				</tr>
				<tr>
					<td>
						<h5><stromg>フリガナ</stromg></h5>
					</td>
					<td>
						<%= @customer.kana_last_name %>
						<%= @customer.kana_first_name %>
					</td>
				</tr>
				<tr>
					<td>
						<h5><strong>郵便番号</strong></h5>
					</td>
					<td>
						<%= @customer.postcode %>
					</td>
				</tr>
				<tr>
					<td>
						<h5><strong>住所</strong></h5>
					</td>
					<td>
						<%= @customer.address %>
					</td>
				</tr>
				<tr>
					<td>
						<h5><stong>電話番号</stong></h5>
					</td>
					<td>
						<%= @customer.phone_number %>
					</td>
				</tr>
				<tr>
					<td>
						<h5><strong>メールアドレス</strong></h5>
					</td>
					<td>
						<%= @customer.email %>
					</td>
				</tr>
				<tr>
					<td>
						<%= link_to '編集する', edit_admins_customer_path, class: "btn-sm btn-primary" %>
					</td>
					<td>
						<%= link_to '注文履歴一覧を見る', orders_path, class: "btn-sm btn-primary" %>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>





