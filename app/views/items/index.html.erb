<%= render 'customers/list', customer: @customer %>

<div class="container">
	<div class="row">

		<div class="col-xs-3">
			<%= render 'items/category.search', categories: @categories %>

		</div>

		<div class="col-xs-9">
			<% if params[:category_id] %> 
			<h3 style="background-color: #DDDDDD;width: 300px;text-align: center;margin-top:30px;margin-bottom:20px;margin-left:10px"><%= @category.name %>一覧（全<%= @items.count %>件）</h3> 
			<% else %> 
			<h3 style="background-color: #DDDDDD;width: 300px;text-align: center;margin-top:30px;margin-bottom:20px;margin-left:10px">商品一覧（全<%= @items.count %>件）</h3> 
			<% end %>

			<div class="row">
				<% @items.each do |item| %>
				<div class="col-xs-3">
					<table>
						<tr>
							<th>
								<%= link_to(item) do %>
								<%= attachment_image_tag item, :image ,:fill, 200, 120 %>
								<% end %>
							</th>
						</tr>
						<tr>
							<th><%= item.name %></th>
						</tr>
						<tr>
							<th>¥<%= item.price %></th>
						</tr>
					</table>
				</div>
				<% end %>
			</div>

		</div>
	</div>
</div>

