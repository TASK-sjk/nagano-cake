<%= render 'customers/list', customer: @customer %>
<div class="container">
  <div class="row">
    <%= flash[:error] %>
    <h3 style="background-color: #DDDDDD;width: 340px;text-align: center;margin-top: 130px">会員の方はこちらからログイン</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <table class="table-borderless" style="margin: 0 auto">
      <tr>
        <td>
          <%= f.label :email, "メールアドレス", style:"padding-right: 5px;" %>
        </td>
        <td class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", size:"40", style:"border-radius: 3px; border: 1px solid #222222" %>
        </td>
      </tr>

      <tr>
        <td>
          <%= f.label :password, "パスワード" %>
        </td>
        <td class="field">
          <%= f.password_field :password, autocomplete: "current-password", size:"40", style:"border-radius: 3px; border: 1px solid #222222" %>
        </td>
      </tr>

      <!-- <tr>
        <td>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        </td>
      </tr> -->

      <tr>
        <td>
        </td>
        <td>
          <div class="actions">
            <%= f.submit "ログイン", class:"btn btn-primary", style:"margin-top: 15px; padding-left:40px; padding-right:40px;" %>
          </div>
        </td>
      </tr>
    </table>
    <% end %>
  </div>

  <div class="row">
    <h3 style="background-color: #DDDDDD;width: 250px;text-align: center;">登録がお済みでない方</h3>
    <h4 style="margin-left:70px;margin-top:40px"><%= link_to "こちら ", new_customer_registration_path %>から新規登録を行ってください。</h4>
  </div>
</div>

