<div class="container">
	<div class="row">
		<h3 style="background-color: #DDDDDD;width: 300px;text-align: center;margin-top: 50px;margin-left: 60px">注文情報確認</h3>
		<div class= "col-xs-9">
		<table class= "table-table-stiped">
			<thead>
				<tr>
					<td>商品名</td>
					<td>単価(税込)</td>
					<td>数量</td>
					<td>小計</td>
				</tr>
            </thead>
				<tr>
					<% sum = 0 %>
					<%= @cart_items.each do |cart_item| %>
					<td><%= attachment_image_tag (@cart_item.item, :image, :fill,80,80 %> <%= item.item.name %></td>
					<td><%= (cart_item.item.price).to_i %></td>
					<%= form_for cart_item, url: cart_items_path(id: cart_item.id) do |f| %>
					<td><%= f.select :item_number, option_for_select((1..10), class: "btn-btn-info", selected: cart_item.item_number) %>
						<%= f.submit "変更", class: "btn-btn-primary" %></td>
						<td><%= (cart_item.item_number * cart_item.item_price).to_i %>
							<% @sum += (cart_item.item_number * cart_item.item_price).to_i %></td>
				</tr>
			<% end %>
		</table>
	</div>
	<div class= "col-xs-3">
		<table class= "table-table-striped">
			<thead>
				<tr>
					<td>送料</td>
					<td>800</td>
				</tr>
				<tr>
					<td>商品合計</td>
					<td>     </td>
				</tr>
				<tr>

				</tr>
			</thead>
		</table>
	</div>
	支払方法<%= @order.pay_type %></br>
    お届け先<%= @order.place %>
<%= f.submit "購入を確定する" home_thanks_path %>

	</div>
</div>