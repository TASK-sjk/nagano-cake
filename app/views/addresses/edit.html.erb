					</tr>
					<tr>
						<td>
							<h5><stromg>宛名</stromg></h5>
						</td>
						<td>
							<%= f.text_field :receiver %>
						</td>
						<td>
							<%= f.submit '登録する', class:"btn-success", style:"padding-left:40px; padding-right:40px; margin-left: 100px;" %>
